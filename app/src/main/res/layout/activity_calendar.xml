<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:layout_below="@+id/calendarView"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="20dp"
        android:id="@+id/selectedDate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Study Plans"
        android:layout_below="@+id/selectedDate"
        android:padding="15dp"
        android:textSize="20dp"
        android:id="@+id/studyCount"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignments"
        android:layout_below="@+id/studyCount"
        android:padding="15dp"
        android:textSize="20dp"
        android:id="@+id/assignmentCount"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exams"
        android:layout_below="@+id/assignmentCount"
        android:padding="15dp"
        android:textSize="20dp"
        android:id="@+id/examCount"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lectures"
        android:layout_below="@+id/examCount"
        android:padding="15dp"
        android:textSize="20dp"
        android:id="@+id/lectureCount"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Home"
        android:id="@+id/homeButton"/>

</RelativeLayout>